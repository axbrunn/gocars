{{define "base"}}
<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{template "title" .}} | GoCars</title>
        <link rel='stylesheet' href='/static/css/main.css'>
    </head>
    <body>
        <div class="row-container">
            {{template "nav" .}}
            <header class="col-container hashed lilac">
                <div class="blue"></div>
                <div class="content">
                    <h1><a href="/">GoCars</a></h1>
                </div>
                <div class="blue"></div>
            </header>
            <main class="col-container">
                <div class="blue"></div>
                    {{template "main" .}}
                <div class="blue"></div>
            </main>
            <footer class="col-container hashed green">
                <div class="green"></div>
                <div class="content">
                    <p>Powered by <a href="https://golang.org/">GoCars</a> in {{.CurrentYear}}</p>
                </div>
                <div class="green"></div>
            </footer>
        </div>
    </body>
</html>
{{end}}
